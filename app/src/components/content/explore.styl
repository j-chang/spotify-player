.Explore
  height: 100vh
  margin-left: 280px

  &-main
    display: flex
    align-items: center
    height: 440px

    &-header
      font-family: $font
      font-size: 68px
      font-weight: 200
      letter-spacing: 0.04em
      line-height: 80px
      color: #fff
      max-width: 60%
      margin-left: 60px
      padding-top: 20px

    &-buttons
      display: flex
      margin-top: 22px

      &-play
        height: 34px
        width: 120px
        padding: 0 16px
        font-family: $font
        font-size: 14px
        font-weight: 500
        letter-spacing: 0.04em
        text-transform: uppercase
        border-radius: 18px
        background: #fff
        color: $color-light-green
        margin-left: 60px
        text-align: center
        line-height: 34px
        cursor: pointer
        transition: opacity .2s ease

        &:hover
          opacity: .8

      &-like
        height: 34px
        width: 34px
        font-size: 14px
        border-radius: 18px
        color: #fff
        margin-left: 16px
        text-align: center
        line-height: 34px
        cursor: pointer
        border: 1px solid #fff
        box-sizing: border-box
        transition: opacity .2s ease

        &:hover
          opacity: .8

  .LatestReleases, .RecommendedAlbums
    background: #fafbfe
    min-height: 300px

    &-header
      display: flex
      align-items: center
      height: 32px
      padding: 22px 30px 0 60px

      &-label
        font-family: $font
        font-size: 18px
        font-weight: 500
        letter-spacing: 0.04em
        color: #555

      &-view
        font-family: $font
        font-size: 14px
        font-weight: 500
        letter-spacing: 0.04em
        color: #666
        cursor: pointer
        margin-left: auto
        transition: opacity .2s ease

        &:hover
          opacity: .6

    &-songs
      display: flex
      padding-left: 60px
      margin-top: 18px

      &-container
        margin-right: 32px

    &-song
      display: flex
      align-items: center
      height: 60px
      width: 380px
      background: #fff
      margin-bottom: 12px
      border-radius: 4px
      padding-left: 22px
      padding-right: 22px
      cursor: pointer
      color: #bbb
      transition: box-shadow .3s ease

      &:hover
        color: $color-light-green
        box-shadow: 0 0 16px 0 rgba(0,0,0,.08)

      &-play
        font-size: 20px
        color: inherit
        cursor: pointer
        transition: color .2s ease

      &-album
        height: 42px
        width: 42px
        background: $color-light-green
        border-radius: 4px
        margin-left: 22px
        cursor: pointer
        transition: opacity .2s ease
        overflow: hidden

        img
          width: 100%
          height: 100%

        &:hover
          opacity: .6

      &-info
        font-family: $font
        font-size: 14px
        letter-spacing: 0.04em
        margin-left: 14px
        color: #666

      &-artist
        margin-bottom: 4px
        font-weight: 600
        color: #333

      &-time
        font-family: $font
        font-size: 14px
        letter-spacing: 0.04em
        margin-left: auto
        color: #999

      &-like
        font-size: 20px
        color: #999
        margin-left: 32px
        transition: color .2s ease

        &:hover
          color: $color-light-green

    &-albums
      display: flex
      align-items: center
      padding-left: 60px
      margin-top: 18px
      padding-bottom: 120px

      &-album
        height: 200px
        min-width: 200px
        background: skyblue
        border-radius: 22px
        margin-right: 22px
        cursor: pointer
        transition: opacity .2s ease
        overflow: hidden

        img
          width: 100%
          height: 100%

        &:hover
          opacity: .8